{
  "name": "webpack-boilerplate",
  "version": "1.0.1",
  "description": "Webpack boilerplate",
  "main": "src/js/app.js",
  "scripts": {
    "lint": "eslint -c .eslintrc src/**",
    "lint:fix": "eslint -c .eslintrc --fix src/**",
    "start": "webpack-dev-server",
    "assets": "node ./tasks/watch-asset.js",
    "shader": "node ./tasks/shader-watcher.js",
    "uniforms": "node ./tasks/uniforms-checker.js",
    "dev": "NODE_ENV=development webpack-dev-server --hot --inline --host 0.0.0.0 --colors --error-details --content-base dist --port 8081 & node ./tasks/watch-asset.js & node ./tasks/shader-watcher.js",
    "build": "NODE_ENV=production webpack --progress --colors --error-details"
  },
  "repository": {},
  "keywords": [],
  "author": "Yi-Wen Lin",
  "license": "ISC",
  "devDependencies": {
    "alfrid": "^0.1.27",
    "assets-loader": "^0.4.0",
    "autoprefixer-loader": "^3.2.0",
    "babel": "^6.5.2",
    "babel-cli": "^6.6.5",
    "babel-core": "^6.24.0",
    "babel-eslint": "6.0.0-beta.6",
    "babel-loader": "6.2.4",
    "babel-plugin-add-module-exports": "0.1.2",
    "babel-plugin-transform-runtime": "6.6.0",
    "babel-preset-es2015": "6.6.0",
    "babel-preset-stage-1": "6.5.0",
    "chokidar": "^1.6.1",
    "css-loader": "^0.23.1",
    "dat-gui": "^0.5.0",
    "eslint": "^2.10.2",
    "eslint-loader": "^1.3.0",
    "events": "^1.1.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "glslify": "^5.0.2",
    "glslify-loader": "^1.0.2",
    "ip": "^1.1.3",
    "node-sass": "^3.4.2",
    "path": "^0.12.7",
    "raw-loader": "^0.5.1",
    "sass-loader": "^3.2.0",
    "stats.js": "^0.16.0",
    "style-loader": "0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "1.12.14",
    "webpack-dev-server": "1.14.1"
  }
}
